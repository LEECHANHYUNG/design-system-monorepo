{
  "extends": "@repo/typescript-config/react-library.json",
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "build", "node_modules", "tests", ".vscode"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  }
}
